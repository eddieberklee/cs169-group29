-# This file is app/views/ptainstructors/index.html.haml
!!! 5

%html{:lang => "en"}
  %head
    %title
      Session List
    = stylesheet_link_tag("frontpage")
    = javascript_include_tag("application")
  %body
    = render :partial => "partial/topbar"
    %div#container
      = render :partial => "partial/ptainstructor_error"
      %h1
        PTA Instructors
      %table{:class => "table table-striped table-hover"}
        %thead
          %tr
            %td Current PTA Instructors:
            / %td.cell_right#create_new_semester
            %td
              = link_to "Add New PTA Instructor", new_semester_ptainstructor_path(@semester)
        %tbody
          - @ptainstructors.each do |ptainstructor|
            %tr
              %td.cell_center{:colspan => "2"}
                %div{:style=>"float:left;"}
                  = ptainstructor.name
                = link_to "Edit", edit_semester_ptainstructor_path(@semester,ptainstructor), :class => "btn btn-warning span1", :style=>"float;left;margin:0;text-align:left;position:relative;left:450px;"
