-# This file is app/views/semesters/new.html.haml
!!! 5

%html
  %head
    %title
      New Session
      = stylesheet_link_tag("frontpage")
      = javascript_include_tag("application")
  %body
    = render :partial => "partial/topbar"
    %div#container
      %ul.nav.nav-tabs
        %li
          = link_to "Home", semesters_path
        %li.active
          = link_to "Sessions", new_semester_path
        %li
          = link_to "Instructors", new_semester_path
        %li
          = link_to "Classes", new_semester_path
        %li
          = link_to "Students", new_semester_path
        %li
          = link_to "Classrooms", new_semester_path
      / %h1.span6.offset3
      .center
        %h1 Semester: #{@semester.name}
      %h3.span8.offset3
        #{flash[:notice]}
      %h3.span8.offset3
        #{flash[:warning]}
      %div.span8.offset2
        %h2
          Classes
        %table.table-striped.table-bordered.table-hover{:style=>"width:100%;text-align:center;"}
          %thead{:style=>"text-decoration:underline;"}
            %td Class
            %td Teacher
            %td Days
            %td Time
            %td Room
            %td Enrolled
            %td Edit
            %td Delete
          %tr
            %td Class
            %td Teacher
            %td Days
            %td Time
            %td Room
            %td Enrolled
            %td Edit
            %td Delete
          %tr
            %td Class
            %td Teacher
            %td Days
            %td Time
            %td Room
            %td Enrolled
            %td Edit
            %td Delete
        .vspace10
        .center-right
          %button.btn.btn-info
            Import
          %button.btn.btn-info
            Add +
        .vspace30

        %h2
          Schedule
        .horizontal-form.justify
          = label :semester, :start_date, 'Start Date:', :class=>"control-label"
          = text_field :semester, :start_date
          .hspace15
          = label :semester, :end_date, 'End Date:', :class=>"control-label"
          = text_field :semester, :end_date
          .hspace15
          %button.btn.btn-info
            Update
          .clear


        = form_tag semesters_path, :class =>"form-horizontal" do
          %div.control-group 
            = label :semester, :name, 'Session Name', :class => "control-label"
            %div.controls
              = text_field :semester, :name
          %div.control-group
            = label :semester, :start_date, 'Start Date', :class => "control-label"
          %div.controls
            = text_field :semester, :start_date, :placeholder => "e.g. 8/15/2012"
          %div.control-group
            = label :semester, :end_date, 'End Date', :class => "control-label"
          %div.controls
            = text_field :semester, :end_date, :placeholder => "e.g. 12/21/2012"
          %div.control-group
            = label :semester, :registration_deadline, 'Registration Deadline', :class => "control-label"
          %div.controls
            = text_field :semester, :registration_deadline, :placeholder => "e.g. 7/30/2012"
          %div.control-group
            = label :semester, :lottery_deadline, 'Lottery Deadline', :class => "control-label"
          %div.controls
            = text_field :semester, :lottery_deadline, :placeholder => "e.g. 8/5/2012"
          %div.control-group
            = label :semester, :fee, 'Registration Fee', :class => "control-label"
          %div.controls
            = text_field :semester, :fee

          %div.control-group
            %div.controls
              = submit_tag 'Save Changes'

