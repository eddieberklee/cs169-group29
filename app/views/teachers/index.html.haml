-# This file is app/views/teacher/index.html.haml
!!! 5

%html{:lang => "en"}
  %head
    %title
      Session List
    = stylesheet_link_tag("frontpage")
    = javascript_include_tag("application")
  %body
    = render :partial => "partial/topbar"
    %div#container
      = render :partial => "partial/user_error"
      %h1.span6.offset3
        Classroom Teachers
      .vspace20
      %table{:class => "table table-striped table-hover"}
        %thead
          %tr
            %td Current Classroom Teachers:
            / %td.cell_right#create_new_semester
            %td
              = link_to "Add New Classroom Teacher", new_semester_teacher_path
        %tbody
          - @teachers.each do |teacher|
            %tr
              %td.cell_center{:colspan => "2"}
                = link_to teacher.name, semester_teacher_path(@semester,teacher)
